{
  // Visit https://aka.ms/tsconfig to read more about this file
  "compilerOptions": {
    "rootDir": "./",
    "outDir": "./dist",
    "target": "ES2022",
    "module": "Node16",
    "moduleResolution": "Node16",
    "isolatedModules": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "types": ["node", "vitest"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
